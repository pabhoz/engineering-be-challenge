{
  "compilerOptions": {
    "target": "es2020",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strict": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "files": true
  }
}